<a href={{ '/recipe/'~ recipe.getId()|trans }} class="card-link">
	<div class="card">
		<div>
			<img style="height:200px" class="img-fluid" src={{ asset('Upload/Image/' ~ recipe.getImageName()) }} alt="Card image cap" ;>
		</div>
		<div class="card-body">
			<h5 class="card-title">{{ recipe.getTitle() }}</h5>
			<h6 class="card-subtitle mb-2 text-muted">{{ recipe.getCategory().value}}</h6>
			<p class="card-text">{{ recipe.getPreparation()}}</p>
			<h6 class="card-text">
				<i class="bi bi-alarm"></i>
				:
				{{ recipe.getPreparationTime()}}
				min</h6>
			<h6 class="card-text">
				<i class="bi bi-fire"></i>
				:
				{{ recipe.getCookingTime()}}
				min</h6>
		</div>
	</div>
</a>

<style>
	/* Enlever les styles du lien pour qu'il n'affecte pas la carte */
	.card-link {
		text-decoration: none; /* Retirer le soulignement du lien */
		color: inherit; /* Garder la couleur de texte originale de la carte */
	}

	.card-link:focus,
	.card-link:hover {
		text-decoration: none; /* Retirer tout soulignement au survol ou au focus */
		color: inherit; /* Garder la couleur de texte originale de la carte */
		outline: none; /* Enlever le contour bleu au focus */
	}
</style>
